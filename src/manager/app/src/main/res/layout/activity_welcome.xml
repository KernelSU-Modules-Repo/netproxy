<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="?android:attr/colorBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/btn_module_mode"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/btn_module_mode"
        android:layout_marginBottom="16dp" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_module_mode"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_software_mode"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/btn_software_mode"
        android:backgroundTint="?android:attr/colorButtonNormal"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="16dp" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_software_mode"
        android:textSize="12sp"
        android:textAlignment="center" />

</LinearLayout>
